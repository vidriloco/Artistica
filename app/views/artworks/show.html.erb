<%= render 'shared/header_opaque' %>
<%= render partial: 'shared/metatags', locals: { seo: @artwork } %>

<!-- Content -->
<div class="content clearfix">
	<!-- About Intro -->
	<div class="section-block clearfix no-padding-bottom">
		<div class="row">
			
			<div class="column width-9 content-inner blog-regular">
				<article class="post no-margin-bottom">
					<div class="post-media center">
						<div class="thumbnail gallery" itemscope itemtype="http://schema.org/ImageGallery">
							<figure itemprop="associatedMedia" itemscope itemtype="http://schema.org/ImageObject">
								<a href="<%= @artwork.url %>" itemprop="contentUrl" data-size="auto">
									<%= image_tag(@artwork.url, itemprop: "thumbnail") %>
								</a>
							</figure>
						</div>
					</div>
					<div class="post-content center">
						<h2 class="post-title"><%= @artwork.title %></h2>
						<%= render partial: 'shared/ownership_details', locals: { resource_name: "Publicada", resource: @artwork } %>
					</div>
					<br/>
					<div class="post-content center">
						<div class="row">
							<div class="column width-10 offset-1">
								<p><%= @artwork.description.html_safe %></p>
							</div>
						</div>
					</div>
				</article>
			</div>
			<div class="column width-3">
				<div class="accordion style-2" data-toggle-icon="" data-toggle-multiple="">
					<div class="post-info boxed">
						<div class="row">
							<div class="column width-12">
								<div class="actions">
									<b>TAGS: </b><%= tags_for(@artwork) %>
								</div>
							</div>
						</div>
						<hr/>
						<div class="row">
							<div class="column width-12">
								<div class="actions center">
									<p>Compartir en</p><%= render partial: 'shared/share_buttons', locals: { sharable_object: @artwork } %>
								</div>
							</div>
						</div>
						<hr/>
						<div class="row">
							<div class="column width-12">
								<div class="actions center">
									<%= link_to "<span class='icon-left-open-mini'></span> AtrÃ¡s".html_safe, :back %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<%= render 'ads/responsive_ad' %>
			</div>
		</div>
	</div>
	<div class="section-block clearfix no-padding-bottom">
		<div class="column width-10 push-1 content-inner blog-regular">
			<div class="row">
				<%= render 'ads/bottom_ad' %>
				
				<div class="fb-comments"
			   data-href="<%= seo_for_url(@artwork) %>"
			   data-width="100%"></div>
	 		 	</div>
			</div>
		</div>
 	</div>
	<hr class="post-finished-indicator" />
	
</div>


