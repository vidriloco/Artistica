<!-- Portfolio Grid -->
<div class="section-block grid-filter-menu right left-on-mobile mt-70">
	<div class="row no-padding">
		<div class="column width-6 left">
			<h3 class="mb-mobile-50"><b>Algunas obras del artista</b></h3>
		</div>
		<div class="column width-6">
			<%= render partial: 'shared/categories_list', locals: { categories: @categories } %>
		</div>
	</div>
</div>
<div class="section-block grid-container fade-in-progressively full-width no-margins no-padding-top" data-layout-mode="masonry" data-grid-ratio="1" data-set-dimensions data-animate-filter-duration="700" data-animate-resize data-animate-resize-duration="0">
	<div class="row">
		<div class="column width-12">
			<div class="row grid content-grid-4">
        <% @artworks.each do |artwork| %>
  				<div class="grid-item <%= artwork.parameterized_category_list %> <%= artwork.disposition_on_landing_page %>">
  					<div class="thumbnail img-scale-in" data-hover-easing="easeInOut" data-hover-speed="700" data-hover-bkg-color="#ffffff" data-hover-bkg-opacity="0.9">
  						<a class="overlay-link" href="<%= artwork_path(artwork) %>">
  							<%= image_tag artwork.image %>
  							<span class="overlay-info">
  								<span>
  									<span>
  										<span class="project-title"><%= artwork.title %></span>
  									</span>
  								</span>
  							</span>
  						</a>
  					</div>
  				</div>
        <% end %>
			</div>
		</div>
	</div>
</div>
<!-- Portfolio Grid End -->