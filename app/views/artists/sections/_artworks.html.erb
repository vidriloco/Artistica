<% unless categories.empty? %>
  <!-- Categories list begins -->
  <div class="section-block grid-filter-menu right left-on-mobile mt-70">
  	<div class="row no-padding">
  		<div class="column width-6 left">
  			<h3 class="mb-mobile-50"><b>Obra</b></h3>
  		</div>
  		<div class="column width-6">
  			<%= render partial: 'shared/categories_list', locals: { categories: categories } %>
  		</div>
  	</div>
  </div>
  <!-- Categories list ends -->
<% end %>

<% unless artworks.empty? %>
  <!-- Artworks list begins -->
  <div class="section-block content-inner blog-masonry grid-container full-width pt-30 masonry masonry-set-dimensions small-margins no-padding-top" data-layout-mode="masonry" data-grid-ratio="1" data-set-dimensions data-animate-filter-duration="700" data-animate-resize data-animate-resize-duration="0">
  	<div class="row">
  		<div class="column width-12">
  			<div class="row grid content-grid-4">
          <%= render artworks %>
  			</div>
  		</div>
  	</div>
  </div>
  <!-- Artworks list ends -->
<% end %>