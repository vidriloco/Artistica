<%= render 'shared/header_transparent' %>
<%= render partial: 'shared/metatags', locals: { seo: @seo } %>

<!-- Content -->
<div class="content clearfix">
  <% unless @slides.empty? %>
    <%= render partial: 'application/sections/slides', locals: { slides: @slides } %>
  <% end %>
  
  <%= render 'application/sections/inspiration_text_one' %>
  
  <% unless @artwork_by_category.empty? %>
    <%= render partial: 'application/sections/artwork_by_category', locals: { categories: @categories, artworks: @artwork_by_category } %>
  <% end %>
	
  <%= render 'application/sections/inspiration_text_two' %>
  
  <% unless @picked_artworks.empty? %>
    <%= render partial: 'application/sections/best-picks', locals: { artworks: @picked_artworks } %>
	<% end %>
  
  <% render 'application/sections/difusion' %>
  
  <% unless @artists.empty? %>
    <%= render partial: 'application/sections/artists', locals: { artists: @artists } %>
  <% end %>
  
	<%= render 'application/sections/about' %>
</div>
<!-- Content End -->

		