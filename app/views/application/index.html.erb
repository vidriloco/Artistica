<%= render 'shared/header_transparent' %>
<%= render partial: 'shared/metatags', locals: { seo: @seo } %>

<!-- Content -->
<div class="content clearfix">
  <% unless @slides.empty? %>
    <%= render partial: 'application/sections/slides', locals: { slides: @slides } %>
  <% end %>
  
  <%= render partial: 'application/sections/best-picks', locals: { artworks: @picked_artworks, category_lists_disabled: true } %>
  
  <% unless @categorized_artworks.empty? %>
    <%= render partial: 'application/sections/categorized-artwork', locals: { categories: @categories, artworks: @categorized_artworks } %>
  <% end %>
	
	<% render 'application/sections/difusion' %>
  <%= render partial: 'application/sections/artists', locals: { artists: @artists } %>
  
	<%= render 'application/sections/about' %>
</div>
<!-- Content End -->

		