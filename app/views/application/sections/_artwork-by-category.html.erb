<!-- Stand out topics -->
<div class="section-block grid-filter-menu right left-on-mobile mt-70">
	<div class="row no-padding">
		<div class="column width-6 left">
			<h3 class="mb-mobile-50">Obras según su técnica</h3>
		</div>
		<div class="column width-6">
			<ul>
				<li><a class="active" href="#" data-filter="*">Todo</a></li>
				<% categories.each do |projected_category| %>
					<li>
						<a href="#" data-filter=".<%= projected_category.category.title.parameterize %>">
							<%= projected_category.category.title %>
						</a>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</div>

<!-- Renders works -->
<div class="section-block grid-container fade-in-progressively small-margins no-padding-top" data-layout-mode="masonry" data-grid-ratio="1.5" data-animate-filter-duration="700" data-set-dimensions data-animate-resize data-animate-resize-duration="0">
	<div class="row">
		<div class="column width-12">
			<div class="row grid content-grid-3">
      	<%= render artworks %>
			</div>
		</div>
	</div>
</div>